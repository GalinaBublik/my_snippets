<div class="wrapper-shadow text-center">
  <img src="{{ 'bg_mv2.png'  | asset_img_url: 'master'}}">
</div>
<div class="page-width ctas-section" data-section-id="{{ section.id }}" data-section-type="ctas">
  
  <div class="container">
         <div class="row">
              <div class="col-xs-12 tabs-section-title">
                  {% if section.settings.title != blank %}
    
             <h2 >{{ section.settings.title }}</h2>
   
            {% endif %}
                  {% if section.settings.text != blank %}
    
             <p>{{ section.settings.text }}</p>
   
            {% endif %}
                  
              
                </div>
          
          </div>
    
    	<div class="ctas-section-items">
    		
          <div class="row">
    		
            {% if section.blocks.size > 0 %}
            
              {% for block in section.blocks %}
            	<div class="col-xs-12 col-sm-4">
            		<div class="ctas-section-item" {{ block.shopify_attributes }}>
                      {% if block.settings.url != blank %}
                      <a href="{{ block.settings.url }}" class="ctas-section-link">
                      {% endif %}
                      {% if block.settings.image != 'empty' %}<div class="ctas-section-item-icon">
                      <img src="{{block.settings.image.src | img_url: 'master' }}"></div>{% endif %}
                      {% if block.settings.title != blank %}
                      <h3 class="ctas-section-item-title">{{ block.settings.title }}</h3>
                      {% endif %}
                      {% if block.settings.content != blank %}
                      <div class="rte-setting">{{ block.settings.content }}</div>
                      {% endif %}
                       {% if block.settings.url != blank %}
                      </a>
                      {% endif %}
                    </div>
                </div>
              
              {% endfor %}
            
          	{% endif %}
          
          
    	  </div>
          
    	</div>
  </div>
  
</div>
